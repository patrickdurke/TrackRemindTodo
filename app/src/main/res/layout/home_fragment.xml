<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_track"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="60dp"
        app:cardBackgroundColor="@color/white_card"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_menu_track"
                app:tint="@color/green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_home_track_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:text="@string/menu_track" />

                <TextView
                    android:id="@+id/text_home_track_subheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/track_subheadning"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_remind"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="60dp"
        app:cardBackgroundColor="@color/white_card"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/card_home_track">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_menu_remind"
            app:tint="@color/gold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/text_home_remind_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:text="@string/menu_remind" />

        <TextView
            android:id="@+id/text_home_remind_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remind_subheadning"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="italic" />

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_todo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="60dp"
        app:cardBackgroundColor="@color/white_card"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/card_home_remind">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_menu_todo"
                app:tint="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_home_todo_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:text="@string/menu_todo" />

                <TextView
                    android:id="@+id/text_home_todo_subheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/todo_subheadning"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>